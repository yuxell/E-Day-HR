 @model KD25_BitirmeProjesi.UI.MVC_Core.Areas.Personel.Models.ViewModels.LeaveRecord_VMs.LeaveRecordDetail_VM

@{
    ViewData["Title"] = "İzin Detayları";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">İzin Talep Detayı</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">İzin Türü:</dt>
                    <dd class="col-sm-8">@Model.LeaveRecordType</dd>

                    <dt class="col-sm-4">Başlangıç Tarihi:</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToString("dd.MM.yyyy")</dd>

                    <dt class="col-sm-4">Bitiş Tarihi:</dt>
                    <dd class="col-sm-8">@Model.EndDate.ToString("dd.MM.yyyy")</dd>

                    <dt class="col-sm-4">Toplam Gün:</dt>
                    <dd class="col-sm-8">@Model.TotalDays</dd>

                    <dt class="col-sm-4">Kullanıcı:</dt>
                    <dd class="col-sm-8">@Model.AppUser</dd>

                    <dt class="col-sm-4">Talep Tarihi:</dt>
                    <dd class="col-sm-8">@Model.RequestDate.ToString("dd.MM.yyyy")</dd>

                    <dt class="col-sm-4">Durum:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@(
                            Model.ApprovalStatus == KD25_BitirmeProjesi.UI.MVC_Core.Areas.Personel.Models.Enums.ApprovalStatus.Approved ? "success" :
                            Model.ApprovalStatus == KD25_BitirmeProjesi.UI.MVC_Core.Areas.Personel.Models.Enums.ApprovalStatus.Denied ? "danger" :
                            Model.ApprovalStatus == KD25_BitirmeProjesi.UI.MVC_Core.Areas.Personel.Models.Enums.ApprovalStatus.Cancelled ? "secondary" : "warning"
                        )">
                            @Model.ApprovalStatus
                        </span>
                    </dd>

                    <dt class="col-sm-4">Cevap Tarihi:</dt>
                    <dd class="col-sm-8">@Model.ResponseDate?.ToString("dd.MM.yyyy")</dd>

                    <dt class="col-sm-4">Oluşturulma Tarihi:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Güncellenme Tarihi:</dt>
                    <dd class="col-sm-8">@Model.UpdatedAt?.ToString("dd.MM.yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Silinme Tarihi:</dt>
                    <dd class="col-sm-8">@Model.DeletedAt?.ToString("dd.MM.yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Kayıt Durumu:</dt>
                    <dd class="col-sm-8">@Model.RecordStatus</dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="UpdateLeaveRecord" asp-route-id="@Model.ID" class="btn btn-warning btn-sm">
                    <i class="mdi mdi-pencil"></i> Düzenle
                </a>
                <a asp-action="ListLeaveRecord" class="btn btn-secondary btn-sm">
                    <i class="mdi mdi-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div>
