 @using KD25_BitirmeProjesi.UI.MVC_Core.Areas.Personel.Models.ViewModels.LeaveRecord_VMs
@model AddLeaveRecord_VM

@{
    ViewData["Title"] = "Yeni İzin Talebi";
}

<div class="col-lg-8 offset-lg-2 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="card-title">Yeni İzin Talebi</h4>
                <a asp-action="ListLeaveRecord" class="btn btn-secondary btn-sm">
                    <i class="mdi mdi-arrow-left"></i> Geri Dön
                </a>
            </div>

            <form asp-action="AddLeaveRecord" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="LeaveRecordTypeID" class="form-label">İzin Türü</label>
                    <input asp-for="LeaveRecordTypeID" class="form-control" placeholder="İzin türü ID'si giriniz" />
                    <span asp-validation-for="LeaveRecordTypeID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AppUserID" class="form-label">Kullanıcı</label>
                    <input asp-for="AppUserID" class="form-control" placeholder="Kullanıcı ID'si giriniz" />
                    <span asp-validation-for="AppUserID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label">Bitiş Tarihi</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TotalDays" class="form-label">Toplam Gün</label>
                    <input asp-for="TotalDays" class="form-control" placeholder="Toplam izin günü" readonly />
                    <span asp-validation-for="TotalDays" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="mdi mdi-content-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const startInput = document.querySelector('input[name="StartDate"]');
            const endInput = document.querySelector('input[name="EndDate"]');
            const totalDaysInput = document.querySelector('input[name="TotalDays"]');

            function calculateDays() {
                const start = new Date(startInput.value);
                const end = new Date(endInput.value);
                if (!isNaN(start) && !isNaN(end) && end >= start) {
                    const diffTime = Math.abs(end - start);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
                    totalDaysInput.value = diffDays;
                } else {
                    totalDaysInput.value = "";
                }
            }

            startInput.addEventListener('change', calculateDays);
            endInput.addEventListener('change', calculateDays);
        });
    </script>
}
