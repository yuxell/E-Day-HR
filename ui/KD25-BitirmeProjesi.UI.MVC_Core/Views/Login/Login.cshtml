@model Login_VM

@{
    Layout = "_LayoutPersonelLogin";
    ViewData["Title"] = "Personel Giriş";
}

<div class="content-wrapper d-flex align-items-center auth">
    <div class="row flex-grow">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
                <div class="brand-logo text-center mb-3">
                    <img src="~/assets/images/E-Day_Logo.png" alt="logo">
                </div>
                <h4>Merhaba! Hadi başlayalım</h4>
                <h6 class="font-weight-light">Hesabına giriş yap.</h6>

                <form asp-action="Login" method="post" class="pt-3">
                    <div class="form-group">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Şifre" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check form-check-flat form-check-primary">
                        <label class="form-check-label text-muted">
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                            Beni unutma!
                        </label>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">GİRİŞ YAP</button>
                    </div>

                    <div class="my-2 d-flex justify-content-between align-items-center">
                        <a asp-action="ForgotPassword" class="auth-link text-black">Şifreni mi unuttun?</a>
                    </div>

                   @*  <div class="text-center mt-4 font-weight-light">
                        Hesabın yok mu? <a asp-action="Register" class="text-primary">Oluştur</a>
                    </div> *@
                </form>

                <!-- Genel hata mesajları -->
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""] == null)
                {
                    <div class="alert alert-danger mt-3">
                        Lütfen tüm alanları doldurunuz.
                    </div>
                }

                @if (ViewData.ModelState[""]?.Errors.Count > 0)
                {
                    <div class="alert alert-danger mt-3">
                        @foreach (var error in ViewData.ModelState[""].Errors)
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
} 