@model ForgotPassword_VM
@{
    Layout = "_LayoutPersonelLogin";
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="content-wrapper d-flex align-items-center auth">
    <div class="row flex-grow">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
                <div class="brand-logo text-center mb-3">
                    <img src="~/assets/images/logo.svg" alt="logo">
                </div>
                <h4>Şifreni mi unuttun?</h4>
                <h6 class="font-weight-light">E-mail adresini gir, sana bir bağlantı gönderelim.</h6>

                <form asp-action="ForgotPassword" method="post" class="pt-3">
                    <div class="form-group">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="E-mail adresiniz" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-block btn-gradient-warning btn-lg font-weight-medium auth-form-btn">
                            Şifre Sıfırlama Linki Gönder
                        </button>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        <a asp-action="Login" class="text-primary">Giriş sayfasına dön</a>
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Message
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
