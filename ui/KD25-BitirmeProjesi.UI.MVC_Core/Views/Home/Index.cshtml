document.addEventListener('DOMContentLoaded', function() {
  // Gelir Vergisi Hesaplama
  const showTaxBtn = document.getElementById('showTaxCalculator');
  const taxForm = document.querySelector('#showTaxCalculator').closest('.tool-card').querySelector('.tax-calculator-form');
  const taxInfoBox = document.querySelector('#showTaxCalculator').closest('.tool-card').querySelector('.tax-info-box');
  
  showTaxBtn.addEventListener('click', function(e) {
    e.preventDefault();
    toggleCalculator(this, taxForm, taxInfoBox);
  });

  // Kurumlar Vergisi Hesaplama
  const showCorporateTaxBtn = document.getElementById('showCorporateTaxCalculator');
  const corporateTaxForm = document.querySelector('#showCorporateTaxCalculator').closest('.tool-card').querySelector('.tax-calculator-form');
  const corporateTaxInfoBox = document.querySelector('#showCorporateTaxCalculator').closest('.tool-card').querySelector('.tax-info-box');
  
  showCorporateTaxBtn.addEventListener('click', function(e) {
    e.preventDefault();
    toggleCalculator(this, corporateTaxForm, corporateTaxInfoBox);
  });

  // Maaş Zammı Hesaplama
  const showRaiseBtn = document.getElementById('showRaiseCalculator');
  const raiseForm = document.querySelector('#showRaiseCalculator').closest('.tool-card').querySelector('.tax-calculator-form');
  const raiseInfoBox = document.querySelector('#showRaiseCalculator').closest('.tool-card').querySelector('.tax-info-box');
  
  showRaiseBtn.addEventListener('click', function(e) {
    e.preventDefault();
    toggleCalculator(this, raiseForm, raiseInfoBox);
  });

  // Diğer hesaplama araçları için toggle
  document.querySelectorAll('.calculate-btn:not(#showTaxCalculator):not(#showCorporateTaxCalculator):not(#showRaiseCalculator)').forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      const card = this.closest('.tool-card');
      const form = card.querySelector('.tax-calculator-form');
      const infoBox = card.querySelector('.tax-info-box');
      toggleCalculator(this, form, infoBox);
    });
  });

  // Maaş zammı hesaplama türü değiştiğinde
  document.querySelectorAll('input[name="raiseType"]').forEach(radio => {
    radio.addEventListener('change', function() {
      const percentageGroup = document.getElementById('percentageInputGroup');
      const amountGroup = document.getElementById('amountInputGroup');
      const resultLabel = document.getElementById('resultLabel');
      
      if (this.value === 'percentage') {
        percentageGroup.style.display = 'block';
        amountGroup.style.display = 'none';
        resultLabel.textContent = 'Zam Tutarı:';
      } else {
        percentageGroup.style.display = 'none';
        amountGroup.style.display = 'block';
        resultLabel.textContent = 'Zam Oranı:';
      }
    });
  });

  // Hesaplama fonksiyonları
  function toggleCalculator(button, form, infoBox) {
    if (form.style.display === 'none') {
      form.style.display = 'block';
      infoBox.style.display = 'none';
      button.innerHTML = '<i class="mdi mdi-chevron-up"></i> Bilgileri Göster';
    } else {
      form.style.display = 'none';
      infoBox.style.display = 'block';
      button.innerHTML = '<i class="mdi mdi-arrow-right"></i> Hemen Hesapla';
    }
  }

  // Gelir vergisi hesaplama
  document.getElementById('calculateTaxBtn').addEventListener('click', function() {
    const income = parseFloat(document.getElementById('annualIncome').value) || 0;
    const isSalary = document.querySelector('input[name="incomeType"]:checked').value === 'salary';
    const applyExemption = document.getElementById('asgariUcretIstisna').checked;
    
    const brackets = [
      { limit: 158000, rate: 0.15 },
      { limit: 330000, rate: 0.20 },
      { limit: 1200000, rate: 0.27 },
      { limit: 4300000, rate: 0.35 },
      { limit: Infinity, rate: 0.40 }
    ];
    
    const exemptionAmount = applyExemption && isSalary ? 240024 : 0;
    const taxableIncome = Math.max(income - exemptionAmount, 0);
    
    let tax = 0;
    let remainingIncome = taxableIncome;
    let prevLimit = 0;
    
    for (const bracket of brackets) {
      if (remainingIncome <= 0) break;
      
      const bracketAmount = Math.min(remainingIncome, bracket.limit - prevLimit);
      tax += bracketAmount * bracket.rate;
      remainingIncome -= bracketAmount;
      prevLimit = bracket.limit;
    }
    
    document.getElementById('taxBase').textContent = taxableIncome.toLocaleString('tr-TR', {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    }) + ' TL';
    
    document.getElementById('taxAmount').textContent = tax.toLocaleString('tr-TR', {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    }) + ' TL';
    
    document.getElementById('netTax').textContent = tax.toLocaleString('tr-TR', {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    }) + ' TL';
  });

  // Kurumlar vergisi hesaplama
  document.getElementById('calculateCorporateTaxBtn').addEventListener('click', function() {
    const taxBase = parseFloat(document.getElementById('corporateTaxBase').value) || 0;
    const taxRate = 0.23; // 2025 kurumlar vergisi oranı
    const taxAmount = taxBase * taxRate;
    
    document.getElementById('corporateTaxAmount').textContent = taxAmount.toLocaleString('tr-TR', {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    }) + ' TL';
  });

  
  // Maaş zammı hesaplama
  document.getElementById('calculateRaiseBtn').addEventListener('click', function() {
    const currentSalary = parseFloat(document.getElementById('currentSalary').value) || 0;
    const raiseType = document.querySelector('input[name="raiseType"]:checked').value;
    
    let newSalary, raiseResult;
    
    if (raiseType === 'percentage') {
      const percentage = parseFloat(document.getElementById('raisePercentage').value) || 0;
      raiseResult = currentSalary * (percentage / 100);
      newSalary = currentSalary + raiseResult;
    } else {
      raiseResult = parseFloat(document.getElementById('raiseAmount').value) || 0;
      newSalary = currentSalary + raiseResult;
    }
    
    document.getElementById('newSalary').textContent = newSalary.toLocaleString('tr-TR', {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    }) + ' TL';
    
    if (raiseType === 'percentage') {
      document.getElementById('raiseResult').textContent = raiseResult.toLocaleString('tr-TR', {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2
      }) + ' TL';
    } else {
      const raisePercentage = (raiseResult / currentSalary) * 100;
      document.getElementById('raiseResult').textContent = raisePercentage.toFixed(2) + '%';
    }
  });
});
</script>





